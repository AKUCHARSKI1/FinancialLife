<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_under_buttons_bg">

    <LinearLayout
        android:id="@+id/relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/date_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/left_arrow_icon"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/date_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/right_arrow_icon"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/chart_settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/relative_layout"
        android:layout_toRightOf="@+id/relative_layout"
        android:src="@drawable/settings_icon"
        android:layout_marginLeft="20dp"/>


</RelativeLayout>