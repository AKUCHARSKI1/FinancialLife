<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    tools:context=".TransactionDetailsActivity">


    <View
        android:id="@+id/light_background_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#C3D7FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/background_view"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:background="#7CA3FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/background_image_view"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arc_2" />

    <TextView
        android:id="@+id/username_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="Anastazja"
        android:textColor="#474747"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/photo_frame_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo_frame_image_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/no_photo_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background_view"
        app:shapeAppearanceOverlay="@style/Circular"
        app:strokeColor="#474747"
        app:strokeWidth="4dp"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/top_background_under_buttons_view"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="160dp"
        android:layout_marginTop="-130dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/custom_under_buttons_bg"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background_view" />

    <View
        android:id="@+id/bottom_background_under_buttons_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/custom_under_buttons_bg"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <TextView
        android:id="@+id/text_view_transaction_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kwota"
        android:textColor="#e70600"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/top_background_under_buttons_view"
        app:layout_constraintTop_toBottomOf="@+id/transaction_name_text_view" />

    <TextView
        android:id="@+id/text_view_transaction_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_transaction_amount"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Kategoria:"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/top_background_under_buttons_view"
        app:layout_constraintTop_toBottomOf="@+id/text_view_transaction_amount" />

    <TextView
        android:id="@+id/text_view_transaction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_transaction_category"
        android:text="Data dodania: "
        android:textSize="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toStartOf="@+id/top_background_under_buttons_view"
        app:layout_constraintTop_toBottomOf="@+id/text_view_transaction_category" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            app:backgroundTint="#C3D7FF"
            app:fabCradleMargin="8dp"

            app:fabCradleRoundedCornerRadius="40dp"
            app:fabCradleVerticalOffset="7dp"
            app:layout_constraintBottom_toBottomOf="parent">


        </com.google.android.material.bottomappbar.BottomAppBar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/history_image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/history_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/target_image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/target_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/home_image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/home_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/coop_image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/coop_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/calculator_image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/calculator_icon" />
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/home_floating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/home_icon"
            app:backgroundTint="#7CA3FF"
            app:layout_anchor="@id/app_bar"
            app:maxImageSize="40dp">


        </com.google.android.material.floatingactionbutton.FloatingActionButton>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <TextView
        android:id="@+id/transaction_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nazwa"
        android:textColor="#474747"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top_background_under_buttons_view" />

    <TextView
        android:id="@+id/text_view_transaction_description"
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:text="ULRACDDLGHXDDDKXXIVZCEAYSGTIFGULRACDDLGHXDDDKXXIVZCEAYSGTIFGULRACDDLGHXDDDKXXIVZCEAYSGTIFGULRACDDLGHXDDDKXXIVZCEAYSGTIFGULRACDDLGHXDDDKXXIVZCEAYSGTIFG"
        android:textColor="#474747"
        android:layout_marginTop="-10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/bottom_background_under_buttons_view"
        app:layout_constraintTop_toTopOf="@+id/bottom_background_under_buttons_view" />

    <LinearLayout
        android:id="@+id/linear_layout_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/custom_delete_button_bg"
        android:orientation="horizontal"
        app:backgroundTint="#FD0000"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation_bar"
        app:layout_constraintEnd_toEndOf="@+id/bottom_background_under_buttons_view"
        app:layout_constraintStart_toStartOf="@+id/bottom_background_under_buttons_view"
        app:layout_constraintTop_toBottomOf="@+id/bottom_background_under_buttons_view">

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_delete_button_bg"
            android:onClick="clickDeletePinButton"
            android:scaleType="center"
            android:src="@drawable/delete_icon"
            android:textSize="34sp"
            app:backgroundTint="#00FD0000" />

        <TextView
            android:id="@+id/my_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="Usuń"
            android:textColor="#474747"
            android:textSize="26sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opis:"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#474747"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_background_under_buttons_view" />
</androidx.constraintlayout.widget.ConstraintLayout>