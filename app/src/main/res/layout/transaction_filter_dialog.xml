<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="#CCE5FF">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/choose_category_text_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/filter_text_view"
                android:layout_alignStart="@+id/name_excerpt_text_view"
                android:layout_alignLeft="@+id/name_excerpt_text_view"
                android:layout_alignEnd="@+id/name_excerpt_text_view"
                android:layout_alignRight="@+id/name_excerpt_text_view"
                android:text="Kategorie:"
                android:textAlignment="center"
                android:textColor="#474747"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/choose_category_text_view"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/choose_category_text_text_view"
                android:layout_alignStart="@+id/transaction_name_edit_text"
                android:layout_alignLeft="@+id/transaction_name_edit_text"
                android:layout_alignEnd="@+id/transaction_name_edit_text"
                android:layout_alignRight="@+id/transaction_name_edit_text"
                android:background="@drawable/spinner_bg"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#474747"
                android:gravity="center" />
            <TextView
                android:id="@+id/filter_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Filtry: "
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/name_excerpt_text_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/choose_category_text_view"
                android:layout_alignStart="@+id/linear_layout_buttons"
                android:layout_alignLeft="@+id/linear_layout_buttons"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Szukaj po nazwie:"
                android:textAlignment="center"
                android:textColor="#474747" />

            <EditText
                android:id="@+id/transaction_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/name_excerpt_text_view"
                android:layout_alignStart="@+id/date_start_text_view"
                android:layout_alignLeft="@+id/date_start_text_view"
                android:layout_alignEnd="@+id/date_start_text_view"
                android:layout_alignRight="@+id/date_start_text_view"
                android:layout_marginHorizontal="20dp"
                android:height="20dp"
                android:background="@drawable/custom_pin_edit_text_bg"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:maxLength="30"
                android:padding="10dp"
                android:textSize="24dp"
                app:layout_constraintEnd_toEndOf="@+id/background_under_buttons_view"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="@+id/background_under_buttons_view"
                app:layout_constraintTop_toBottomOf="@+id/amount_target_text_view" />

            <TextView
                android:id="@+id/amount_start_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linear_layout_buttons"
                android:layout_alignStart="@+id/linear_layout_buttons"
                android:layout_alignLeft="@+id/linear_layout_buttons"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="-30dp"
                android:text="Kwota od:"
                android:textColor="#474747" />

            <TextView
                android:id="@+id/amount_end_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/linear_layout_buttons"
                android:layout_alignStart="@+id/linear_layout_buttons"
                android:layout_alignLeft="@+id/linear_layout_buttons"
                android:layout_marginLeft="182dp"
                android:layout_marginBottom="-30dp"
                android:text="Kwota do:"
                android:textColor="#474747" />

            <LinearLayout
                android:id="@+id/linear_layout_buttons"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/transaction_name_edit_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/bottom_amount_edit_text"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/text_view"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="5dp"
                    android:height="20dp"
                    android:background="@drawable/custom_pin_edit_text_bg"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:textSize="24dp"
                    app:layout_constraintHorizontal_bias="0.1" />

                <EditText
                    android:id="@+id/top_amount_edit_text"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/text_view"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:height="20dp"
                    android:background="@drawable/custom_pin_edit_text_bg"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:textSize="24dp"
                    app:layout_constraintHorizontal_bias="0.1" />

            </LinearLayout>

            <TextView
                android:id="@+id/date_start_text_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_layout_buttons"
                android:layout_alignStart="@+id/linear_layout_buttons"
                android:layout_alignLeft="@+id/linear_layout_buttons"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:text="Data początkowa:"
                android:textColor="#474747"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/date_start_text_view"
                android:layout_alignStart="@+id/date_start_text_view"
                android:layout_alignLeft="@+id/date_start_text_view"
                android:layout_alignEnd="@+id/date_start_text_view"
                android:layout_alignRight="@+id/date_start_text_view"
                android:layout_marginLeft="11dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/background_under_buttons_view"
                app:layout_constraintStart_toStartOf="@+id/background_under_buttons_view"
                app:layout_constraintTop_toBottomOf="@+id/date_end_text_view">

                <EditText
                    android:id="@+id/start_date_edit_text"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:height="20dp"
                    android:background="@drawable/custom_pin_edit_text_bg"
                    android:editable="false"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="none"
                    android:padding="10dp"
                    android:textSize="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/background_under_buttons_view"
                    app:layout_constraintStart_toStartOf="@+id/background_under_buttons_view"
                    app:layout_constraintTop_toTopOf="@+id/background_under_buttons_view"
                    tools:ignore="Deprecated" />

                <ImageView
                    android:id="@+id/start_calendar_image_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/calendar_icon" />
            </LinearLayout>

            <TextView
                android:id="@+id/date_end_text_view"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout4"
                android:layout_alignStart="@+id/linear_layout_buttons"
                android:layout_alignLeft="@+id/linear_layout_buttons"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="Data końcowa:"
                android:textAlignment="center"
                android:textColor="#474747" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/date_end_text_view"
                android:layout_alignStart="@+id/date_start_text_view"
                android:layout_alignLeft="@+id/date_start_text_view"
                android:layout_alignEnd="@+id/date_start_text_view"
                android:layout_alignRight="@+id/date_start_text_view"
                android:orientation="horizontal"
                android:layout_marginLeft="11dp"
                app:layout_constraintEnd_toEndOf="@+id/background_under_buttons_view"
                app:layout_constraintStart_toStartOf="@+id/background_under_buttons_view"
                app:layout_constraintTop_toBottomOf="@+id/date_end_text_view">

                <EditText
                    android:id="@+id/end_date_edit_text"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:height="20dp"
                    android:background="@drawable/custom_pin_edit_text_bg"
                    android:editable="false"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="none"
                    android:padding="10dp"
                    android:textSize="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/background_under_buttons_view"
                    app:layout_constraintStart_toStartOf="@+id/background_under_buttons_view"
                    app:layout_constraintTop_toTopOf="@+id/background_under_buttons_view" />

                <ImageView
                    android:id="@+id/end_calendar_image_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/calendar_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/linearLayout5"
                android:layout_alignStart="@+id/date_start_text_view"
                android:layout_alignLeft="@+id/date_start_text_view"
                android:layout_alignEnd="@+id/date_start_text_view"
                android:layout_alignRight="@+id/date_start_text_view"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="@+id/background_under_buttons_view"
                app:layout_constraintStart_toStartOf="@+id/background_under_buttons_view"
                app:layout_constraintTop_toBottomOf="@+id/date_end_text_view">

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_delete_button_bg"
                    android:onClick="clickDeletePinButton"
                    android:scaleType="center"
                    android:textColor="#474747"
                    android:text="Anuluj"
                    android:textSize="20sp"
                    app:backgroundTint="#FD0000" />

                <Button
                    android:id="@+id/accept_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_confirm_button_bg"
                    android:onClick="archiveTarget"
                    android:text="Zatwierdź"
                    android:layout_marginLeft="10dp"
                    android:textColor="#474747"
                    android:textSize="20sp"
                    app:backgroundTint="#94E13A" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scroll_view_multibox"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_below="@+id/choose_category_text_view"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/spinner_popup"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/choose_category_text_text_view"
                app:layout_constraintEnd_toEndOf="@+id/background_under_buttons_view"
                app:layout_constraintStart_toStartOf="@+id/background_under_buttons_view"
                app:layout_constraintTop_toBottomOf="@+id/choose_category_text_text_view">

                <LinearLayout
                    android:id="@+id/container_multibox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>
            </ScrollView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>